<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.banking.controller.AuthController" stylesheets="@../css/styles.css">
    <center>
        <VBox alignment="CENTER" spacing="20"
              style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);">
            <VBox alignment="CENTER" spacing="10"
                  style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 40;
                  -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);">
                <Label text="WorldBank System"
                       style="-fx-text-fill: #333; -fx-font-size: 24; -fx-font-weight: bold;"/>
                <Label text="Secure Login"
                       style="-fx-text-fill: #666; -fx-font-size: 14;"/>

                <VBox spacing="15" style="-fx-padding: 20 0 0 0;">
                    <TextField fx:id="usernameField" promptText="Username" styleClass="modern-field"/>
                    <PasswordField fx:id="passwordField" promptText="Password" styleClass="modern-field"/>
                    <Button text="Login" onAction="#handleLogin" styleClass="primary-button" defaultButton="true"/>
                    <Label fx:id="errorLabel" visible="false"
                           style="-fx-text-fill: #e74c3c; -fx-font-size: 12;"/>
                </VBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
