<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.banking.controller.DashboardController" stylesheets="@../css/styles.css">
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="WorldBank System"
                   style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;"/>
            <Label fx:id="welcomeLabel" style="-fx-text-fill: #ecf0f1; -fx-font-size: 14;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#handleLogout" styleClass="logout-button"/>
        </HBox>
    </top>
    <center>
        <StackPane fx:id="contentArea"/>
    </center>
</BorderPane>
